generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Event {
  id          Int        @id @default(autoincrement())
  name        String
  totalSeats  Int
  bookings    Booking[]

  @@map("events")
}

model Booking {
  id         Int      @id @default(autoincrement())
  event      Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId    Int
  userId     String
  createdAt  DateTime @default(now())

  @@unique([eventId, userId], name: "unique_user_event_booking")
  @@map("bookings")
}